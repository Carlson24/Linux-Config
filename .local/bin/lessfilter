#!/bin/bash

mime=$(file -Lbs --mime-type "$1")
category=${mime%%/*}

if [ -d "$1" ]; then
    lsd -al --config-file="${XDG_CONFIG_HOME:-${HOME}/.config}/zinit/lsd-fzf.yaml" "$1"
elif [ "$category" = image ]; then
    chafa -f symbols "$1"
elif [ "$category" = text ]; then
    bat --color=always "$1"
else
    exit 1
fi
